@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Düzenle</th>
                    </tr>


                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.AdminID</td>
                            <td>@x.Username</td>
                            <td><a href="/Admin/EditAdmin/@x.AdminID" class="btn btn-outline-success">
                                <i class="mdi mdi-lead-pencil"></i>
                                </a></td>
                        </tr>
                    }
                </table>
                <br />
                <br />
                <a href="/Admin/AddAdmin" class="btn btn-outline-info">Yeni Admin Girişi</a>
            </div>
        </div>
    </div>
</div>

