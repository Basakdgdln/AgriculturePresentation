@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Ürün Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>

                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="py-1"><img src="@x.ImagePath" alt="image" /></td>
                            <td>@x.Name</td>
                            <td>@x.Category.Name</td>
                            <td>@x.Price</td>
                            <td>@x.Stock</td>
                            <td>
                                <a href="/Product/EditProduct/@x.ProductID" class="btn btn-outline-info">Düzenle</a>
                            </td>
                        </tr>
                    }

                </table>
                <br />
                <a href="/Product/AddProduct" class="btn btn-outline-success">Yeni Ürün Girişi</a>
            </div>
        </div>
    </div>
</div>


