@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.AnnouncementID</td>
                                <td>@x.Title</td>
                                <td>@x.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@x.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@x.AnnouncementID" class="btn btn-outline-success">Düzenle</a></td>
                                @if (x.Status == false)
                                {
                                    <td><a href="/Announcement/ChangeStatusToTrue/@x.AnnouncementID" class="btn btn-outline-warning">Aktif Yap</a></td>
                                }
                                else
                                {
                                    <td><a href="/Announcement/ChangeStatusToFalse/@x.AnnouncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>