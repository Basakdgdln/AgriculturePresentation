@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.AnnouncementID)
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık giriniz..." asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" rows="4" asp-for="Description" placeholder="Açıklama giriniz..."></textarea>
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="text" class="form-control" placeholder="Tarih giriniz..." asp-for="Date" readonly>
                </div>
                <button type="submit" class="btn btn-outline-info">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>



