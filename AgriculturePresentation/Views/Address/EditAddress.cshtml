@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Bilgisi Güncelleme Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.AddressID)
                    <label>Adres</label>
                    <input type="text" class="form-control" placeholder="Açıklama 1" asp-for="Description1">
                    <span asp-validation-for="Description1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Posta Kodu / Şehir</label>
                    <input type="text" class="form-control" placeholder="Açıklama 2" asp-for="Description2">
                    <span asp-validation-for="Description2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="email" class="form-control" placeholder="Açıklama 3" asp-for="Description3">
                    <span asp-validation-for="Description3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Telefon Numarası</label>
                    <input type="tel" class="form-control" placeholder="Açıklama 4" asp-for="Description4">
                    <span asp-validation-for="Description4" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Harita Konumu</label>
                    <input type="text" class="form-control" placeholder="Harita Bilgisi" asp-for="MapInfo">
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-info">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>
