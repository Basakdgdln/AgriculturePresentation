@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>
            <div class="table-responsive">
                <div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Adres</th>
                                <th>Posta Kodu / Şehir</th>
                                <th>Mail Adresi</th>
                                <th>Telefon Numarası</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>

                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Description1</td>
                                <td>@x.Description2</td>
                                <td>@x.Description3</td>
                                <td>@x.Description4</td>
                                <td><a href="/Address/EditAddress/@x.AddressID" class="btn btn-outline-success">
                                    <i class="mdi mdi-lead-pencil"></i>
                                    </a></td>
                            </tr>
                        }
                    </table>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>

