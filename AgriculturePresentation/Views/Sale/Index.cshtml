@using EntityLayer.Concrete
@model List<Sale>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Ürün Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Müşteri</th>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Toplam Tutar</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>

                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>#</td>
                            <td>@x.Customer</td>
                            <td>@x.Product.Name</td>
                            <td>@x.Piece</td>
                            <td>@x.TotalAmount</td>
                            <td>
                                <a href="/Sale/EditSale/@x.SaleID" class="btn btn-outline-success">
                                    <i class="mdi mdi-lead-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </table>
                <br />
                <a href="/Sale/AddSale" class="btn btn-outline-info">Yeni Satış Yap</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>

