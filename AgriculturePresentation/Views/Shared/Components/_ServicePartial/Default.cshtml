@using EntityLayer.Concrete
@model List<Service>

<div class="sevices-w3layouts" id="services">
    <div class="container">
        <h3 class="tittle">Hizmetlerimiz</h3>
        <p class="heading-btm-w3ls">4 Farklı hizmet türü ile sizlere ulaşmaya devam ediyoruz.</p>
        <div class="services-main">
            @foreach (var x in Model)
            {
                <div class="@x.Class1" data-wow-delay=".5s">
                    <h5>@x.Title</h5>
                    <p>@x.Description</p>

                    <div class="@x.Class2">
                        <i class="@x.Image" aria-hidden="true"></i>
                        <p>@x.Title</p>
                    </div>
                </div>
            }
        </div>
        <div class="clearfix"> </div>
    </div>
</div>