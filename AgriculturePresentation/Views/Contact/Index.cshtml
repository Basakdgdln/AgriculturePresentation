@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Mesaj Listesi</h4>
        <div class="table-responsive">
            <div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>

                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.ContactID</td>
                            <td>@x.Name</td>
                            <td>@x.Mail</td>
                            <td>@x.Date</td>
                            <td><a href="/Contact/MessageDetails/@x.ContactID" class="btn btn-outline-success">Mesajı Gör</a></td>
                        </tr>
                    }
                </table>
            </div>
            <br />
        </div>
    </div>
</div>
</div>


